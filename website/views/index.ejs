<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recommendation System App</title>
</head>
<body>
  <h1>Welcome to the Recommendation System App!</h1>
  <section>
    <h2>Survey Form</h2>
    <form id="surveyForm">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        <br><br>
        <label>Select your preferred themes:</label>
        <br>
        <input type="checkbox" name="selectedThemes" value="1_Blockchain"> Blockchain
        <input type="checkbox" name="selectedThemes" value="2_DevOps"> DevOps
        <input type="checkbox" name="selectedThemes" value="3_Fintech"> Fintech
        <input type="checkbox" name="selectedThemes" value="4_Gaming"> Gaming
        <input type="checkbox" name="selectedThemes" value="5_AR/VR"> AR/VR
        <input type="checkbox" name="selectedThemes" value="6_Machine Learning/AI"> Machine Learning/AI
        <input type="checkbox" name="selectedThemes" value="7_IoT"> IoT
        <br>
        <input type="checkbox" name="selectedThemes" value="8_Voice skills"> Voice skills
        <input type="checkbox" name="selectedThemes" value="9_Cybersecurity"> Cybersecurity
        <input type="checkbox" name="selectedThemes" value="10_Communication"> Communication
        <input type="checkbox" name="selectedThemes" value="11_Productivity"> Productivity
        <input type="checkbox" name="selectedThemes" value="12_Lifehacks"> Lifehacks
        <input type="checkbox" name="selectedThemes" value="13_Social Good"> Social Good
        <input type="checkbox" name="selectedThemes" value="14_COVID-19"> COVID-19
        <br>
        <input type="checkbox" name="selectedThemes" value="15_Music/Art"> Music/Art
        <input type="checkbox" name="selectedThemes" value="16_Health"> Health
        <input type="checkbox" name="selectedThemes" value="17_Low/No Code"> Low/No Code
        <input type="checkbox" name="selectedThemes" value="18_Design"> Design
        <input type="checkbox" name="selectedThemes" value="19_Education"> Education
        <input type="checkbox" name="selectedThemes" value="20_E-commerce/Retail"> E-commerce/Retail
        <input type="checkbox" name="selectedThemes" value="21_Enterprise"> Enterprise
        <br>
        <input type="checkbox" name="selectedThemes" value="22_Open Ended"> Open Ended
        <input type="checkbox" name="selectedThemes" value="23_Beginner Friendly"> Beginner Friendly
        <input type="checkbox" name="selectedThemes" value="24_Quantum"> Quantum
        <input type="checkbox" name="selectedThemes" value="25_Web"> Web
        <input type="checkbox" name="selectedThemes" value="26_Mobile"> Mobile
        <input type="checkbox" name="selectedThemes" value="27_Robotic Process Automation"> Robotic Process Automation
        <input type="checkbox" name="selectedThemes" value="28_Databases"> Databases
        <br><br>
        <button type="submit" onclick="saveUser()">Submit</button>
    </form>
  </section>
  

  <script>
    function saveUser() {
        const username = document.getElementById('username').value;
        const selectedThemes = Array.from(document.querySelectorAll('input[name="selectedThemes"]:checked')).map(checkbox => checkbox.value);

        const userData = { username, selectedThemes };

        fetch('/survey', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(userData)
        })
        .then(response => response.text())
        .then(message => {
        alert(message);
        // Optionally, redirect to a different page or perform other actions
        })
        .catch(error => console.error(error));
    }
  </script>
</body>
</html>
